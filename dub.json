{
    "name": "gfm",
    "description": "D gamedev toolkit. 3D maths, OpenGL/SDL/FreeImage/Assimp/ENet wrapper, stb_image port.",
    "homepage": "http://github.com/d-gamedev-team/gfm/",
    "copyright": "none",
    "license": "public domain",

    "authors": [
        "Guillaume Piolat / ponce: main author",
        "Gerbrand Kamphuis / vuaru: many fixes",
        "Kyle Hunter / Kelet: ENet wrapper",
        "Francesco Cattoglio: OpenGL wrapper improvements",
        "John D. Cook: SimpleRNG author",
        "Sam Hocevar: many bits of code",
        "Daniel Cousens / RommelVR: GL fix",
        "Daniele Bondi / maeriden: Euler angles fix"
    ],

    "targetType": "none",

    "dependencies": {
        "gfm:core": "*",
        "gfm:assimp": "*",
        "gfm:enet": "*",
        "gfm:freeimage": "*",
        "gfm:image": "*",
        "gfm:math": "*",
        "gfm:net": "*",
        "gfm:opengl": "*",
        "gfm:sdl2": "*",
        "gfm:logger": "*"
    },

    "subPackages": [
        {
            "name": "core",
            "sourcePaths": [ "core/gfm/core" ],
            "importPaths": [ "core" ]
        },
        {
            "name": "math",
            "sourcePaths": [ "math/gfm/math" ],
            "importPaths": [ "math" ]
        },
        {
            "name": "image",

            "sourcePaths": [ "image/gfm/image" ],
            "importPaths": [ "image" ],
            "dependencies": {
                "gfm:core": "*",
                "ae-graphics": "~>0.0"
            }
        },
        {
            "name": "net",
            "sourcePaths": [ "net/gfm/net" ],
            "importPaths": [ "net" ]
        },
        {
            "name": "enet",
            "sourcePaths": [ "enet/gfm/enet" ],
            "importPaths": [ "enet" ],
             "dependencies": {
                "derelict-enet": "~>2.0",
                "logger": "~>2.66.0"
            }
        },
        {
            "name": "assimp",
            "sourcePaths": [ "assimp/gfm/assimp" ],
            "importPaths": [ "assimp" ],
            "dependencies": {
                "derelict-assimp3": "~>1.0",
                "logger": "~>2.66.0"
            }
        },
        {
            "name": "opengl",
            "sourcePaths": [ "opengl/gfm/opengl" ],
            "importPaths": [ "opengl" ],
            "dependencies": {
                "derelict-gl3": "~>1.0",
                "logger": "~>2.66.0",
                "gfm:math": "*"
            }
        },
        {
            "name": "sdl2",
            "sourcePaths": [ "sdl2/gfm/sdl2" ],
            "importPaths": [ "sdl2" ],
            "dependencies": {
                "derelict-sdl2": "~>1.9",
                "logger": "~>2.66.0"
            }
        },
        {
            "name": "freeimage",
            "sourcePaths": [ "freeimage/gfm/freeimage" ],
            "importPaths": [ "freeimage" ],
            "dependencies": {
                "derelict-fi": "~>2.0"
            }
        },
        {
            "name": "logger",
            "sourcePaths": [ "logger/gfm/logger" ],
            "importPaths": [ "logger" ],
            "dependencies": {
                "logger": "~>2.66.0",
                "colorize": "~>1.0"
            }
        },
    ]
}
